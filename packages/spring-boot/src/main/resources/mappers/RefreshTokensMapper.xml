<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="jp.co.itfllc.WebSystemSamples.mappers.RefreshTokensMapper">
    <select id="selectByUserId" resultType="RefreshTokensEntity">
        SELECT
            *
        FROM
            refresh_tokens
        WHERE
            users_id = #{userId};
    </select>

    <select id="insert" resultType="RefreshTokensEntity">
        INSERT INTO public.refresh_tokens
            (users_id, hashed_token, expires_at)
        VALUES
            (#{usersId}::uuid, #{hashedToken}, #{expiresAt})
        RETURNING
            *;
    </select>
</mapper>
