<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="jp.co.itfllc.WebSystemSamples.mappers.RefreshTokensMapper">
    <select id="insert" resultType="RefreshTokensEntity">
        INSERT INTO public.refresh_tokens
            (users_id, hashed_token, expires_at)
        VALUES
            (#{usersId}::uuid, #{hashedToken}, #{expiresAt})
        RETURNING
            *;
    </select>

    <select id="selectByHashedToken" resultType="RefreshTokensEntity">
        SELECT
            *
        FROM
            refresh_tokens
        WHERE
            hashed_token = #{hashedToken};
    </select>

    <update id="revokeByHashedToken">
        UPDATE
            refresh_tokens
        SET
            revoked = TRUE
        WHERE
            hashed_token = #{hashedToken};
    </update>

    <update id="revokeAllByUsersId">
        UPDATE
            refresh_tokens
        SET
            revoked = TRUE
        WHERE
            users_id = #{usersId}::uuid;
    </update>

    <delete id="deleteByHashedToken">
        DELETE
        FROM
            refresh_tokens
        WHERE
            hashed_token = #{hashedToken};
    </delete>
</mapper>
