<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="jp.co.itfllc.WebSystemSamples.mappers.UsersMapper">
    <select id="selectByAccount" resultType="UsersEntity">
        SELECT
            *
        FROM
            users
        WHERE
            account = #{account};
    </select>
    <select id="insert" resultType="UsersEntity">
        INSERT INTO users
            (account, hashed_password, "name", disabled_at, "role")
        VALUES
            (#{account}, #{hashedPassword}, #{name}, #{disabledAt}, #{role}::role)
        RETURNING
            *;
    </select>
    <select id="selectList" resultType="UsersEntity">
        SELECT
            *
        FROM
            users
        ORDER BY
            id;
    </select>
</mapper>
